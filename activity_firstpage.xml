<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstpageActivity">

    <ImageView
        android:id="@+id/tutronicon"
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="icon of the application"
        android:gravity="center"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tutron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Tutron"
        android:textColor="@color/black"
        android:textSize="49sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@id/tutronicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.866" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-48dp"
        tools:layout_editor_absoluteY="538dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginpagebtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/material_on_surface_disabled"
            android:text="Log In"
            android:textSize="25sp"

            app:layout_constraintTop_toBottomOf="@id/password" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/createaccountpagebtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/material_on_surface_disabled"
            android:text="Create Account"
            android:textSize="25sp"

            app:layout_constraintTop_toBottomOf="@id/loginpagebtn" />

    </LinearLayout> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:ignore="MissingConstraints"
    tools:layout_editor_absoluteX="-48dp"
    tools:layout_editor_absoluteY="538dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginpagebtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/material_on_surface_disabled"
        android:text="Log In"
        android:textSize="25sp"

        app:layout_constraintTop_toBottomOf="@id/password" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/createaccountpagebtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/material_on_surface_disabled"
        android:text="Create Account"
        android:textSize="25sp"

        app:layout_constraintTop_toBottomOf="@id/loginpagebtn" />

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>